@model IEnumerable<Project>
<section id="categories_admin">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <a class="btn bg-secondary btn-secondary text-white d-block mb-3" asp-action="ProjectCreate">Layihə əlavə et</a>
                <div class="table-responsive">
                    <table class="table table-dark table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Adı</th>
                                <th scope="col">Şəkil</th>
                                <th scope="col">Kateqoriya</th>
                                <th scope="col">Url</th>
                                <th scope="col">Ana Səhifədədirmi?</th>
                                <th scope="col">Ana Səhifə şəkli</th>
                                <th scope="col">Tarix</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model)
                            {
                                <tr>
                                    <th scope="row">@project.Id</th>
                                    <td>@project.Name</td>
                                    <td><img src="~/img/@project.ImageUrl" width="150" /></td>
                                    <td>@project.ProjectCategory.Name</td>
                                    <td>@project.Url</td>
                                    <td>@(project.ShowInHome ? "Hə" : "Yox" )</td>
                                    <td><img src="~/img/@project.Home_ImageUrl" width="150" /></td>
                                    <td>@project.Date.ToString("dd/MM/yyyy")</td>
                                    <td>@(project.Status ? "Aktiv" : "Deaktiv" )</td>
                                    <td class="text-right"><a class="btn bg-warning btn-warning text-white" asp-action="ProjectUpdate" asp-route-id="@project.Id">Redaktə et</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>