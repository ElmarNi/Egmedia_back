@model Slider
<section id="slider_update" class="admin_crud">
    <div class="container mt-5">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="col-6 text-center mb-3">
                <img src="~/img/@Model.ImageUrl" height="300" class="p-2 border" id="main_image" />
            </div>
            <div class="col-6 text-center mb-3">
                <img src="~/img/@Model.Aside_ImageUrl" height="300" class="p-2 border" id="second_image" />
            </div>
            <div class="col-12 mb-3" asp-validation-summary="ModelOnly"></div>
            <div class="col-4 mb-3">
                <label>Başlığın birinci sözü</label>
                <input asp-for="Header_First_Word" class="w-100">
                <span asp-validation-for="Header_First_Word" class="validation-span"></span>
            </div>
            <div class="col-4 mb-3">
                <label>Başlığın ikinci sözü</label>
                <input asp-for="Header_Second_Word" class="w-100">
                <span asp-validation-for="Header_Second_Word" class="validation-span"></span>
            </div>
            <div class="col-4 mb-3">
                <label>İkinci başlıq</label>
                <input asp-for="Aside_Header" class="w-100">
                <span asp-validation-for="Aside_Header" class="validation-span"></span>
            </div>
            <div class="col-6 mb-3">
                <label>Əsas şəkil</label>
                <input asp-for="Image" class="w-100">
                <span asp-validation-for="Image" class="validation-span"></span>
            </div>
            <div class="col-6 mb-3">
                <label>İkinci şəkil</label>
                <input asp-for="Aside_Image" class="w-100">
                <span asp-validation-for="Aside_Image" class="validation-span"></span>
            </div>
            <div class="col-12 mb-3">
                <label>Kontent</label>
                <textarea asp-for="Content" id="editor"></textarea>
                <span asp-validation-for="Content" class="validation-span"></span>
            </div>
            <div class="col-12 text-center">
                <input type="submit" value="Yadda saxla" class="btn btn-success bg-success text-white" />
            </div>
        </form>
    </div>
</section>
@section Scripts{
    <script src="~/ckeditor_4.16.0_full/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editor")
    </script>
    <partial name="_ValidationScriptsPartial" />
}