@model IEnumerable<Service>
<section id="services_admin">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <a class="btn bg-secondary btn-secondary text-white d-block mb-3" asp-action="Create">Xidmət əlavə et</a>
                <div class="table-responsive">
                    <table class="table table-dark table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Başlığı</th>
                                <th scope="col">Kateqoriya adı</th>
                                <th scope="col">Kateqoriya ikonu</th>
                                <th scope="col">Kateqoriya şəkli</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in Model)
                            {
                                <tr>
                                    <th scope="row">@service.Id</th>
                                    <td>@service.Heading</td>
                                    <td>@service.CategoryName</td>
                                    <td class="text-center"><img src="~/img/@service.CategoryIconUrl" /></td>
                                    <td class="text-center"><img src="~/img/@service.CategoryImageUrl" width="150" /></td>
                                    <td>@(@service.Status ? "Aktiv" : "Deaktiv")</td>
                                    <td class="text-right"><a class="btn bg-warning btn-warning text-white" asp-action="Update" asp-route-id="@service.Id">Redaktə et</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>