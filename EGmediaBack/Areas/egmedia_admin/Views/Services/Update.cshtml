@model Service
<section id="service_create" class="service_crud admin_crud">
    <div class="container mt-5">
        <div class="row mb-3">
            <div class="col-12 mb-3">
                <a class="btn d-block bg-secondary text-white" asp-action="index">Xidmətlərə qayıt</a>
            </div>
            <div class="col-4">
                <p class="m-0">Kateqoriya ikonu</p>
                <img src="~/img/@Model.CategoryIconUrl" id="icon" class="bg-dark p-2 border" />
            </div>
            <div class="col-8">
                <p class="m-0">Kateqoriya şəkli</p>
                <img src="~/img/@Model.CategoryImageUrl" height="350" width="100%" style="object-fit: contain" id="cat_image" class="p-2 border" />
            </div>
        </div>
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="col-12 mb-3" asp-validation-summary="ModelOnly"></div>
            <div class="col-4">
                <label>Başlığı</label>
                <input asp-for="Heading" class="w-100" />
                <span asp-validation-for="Heading" class="validation-span"></span>
            </div>
            <div class="col-4">
                <label>Kateqoriyası</label>
                <input asp-for="CategoryName" class="w-100" />
                <span asp-validation-for="CategoryName" class="validation-span"></span>
            </div>
            <div class="col-4">
                <label>Status</label>
                <input asp-for="Status" class="w-100" />
            </div>
            <div class="col-4 mt-3">
                <label>İkon</label>
                <input asp-for="CategoryIcon" class="w-100" />
            </div>
            <div class="col-4 mt-3">
                <label>Kateqoriya şəkli</label>
                <input asp-for="CategoryImage" class="w-100" />
            </div>
            <div class="col-4 mt-3">
                <label>Şəkillər</label>
                <input asp-for="DetailPhotos" class="w-100" />
            </div>
            <div class="col-12 mt-3">
                <span asp-validation-for="Content" class="validation-span"></span>
                <textarea asp-for="Content" id="editor"></textarea>
            </div>
            <div class="col-12 text-center mt-3">
                <input type="submit" value="Yadda saxla" class="btn btn-success bg-success text-white" />
            </div>
        </form>
    </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor_4.16.0_full/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editor")
    </script>
}
