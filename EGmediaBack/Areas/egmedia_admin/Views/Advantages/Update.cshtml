@model Advantage
<section id="admin_advantage" class="update">
    <div class="container mt-5">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="col-12 text-center mb-3">
                <img src="~/img/@Model.IconUrl" class="img-fluid p-2 border" />
            </div>
            <div class="col-12 mb-3" asp-validation-summary="ModelOnly"></div>
            <div class="col-6 mb-3">
                <label>Şəkil</label>
                <input asp-for="Icon" class="w-100" />
                <span asp-validation-for="Icon" class="validation-span"></span>
            </div>
            <div class="col-6 mb-5">
                <label>Qısa məlumat</label>
                <input asp-for="Content" class="w-100" />
                <span asp-validation-for="Content" class="validation-span"></span>
            </div>
            <div class="col-12 text-center">
                <input type="submit" value="Yadda saxla" class="btn btn-success bg-success text-white" />
            </div>
        </form>
    </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}