@model IEnumerable<Advantage>
<section id="advantages_admin">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-dark table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Şəkil</th>
                                <th scope="col">Qısa məlumat</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var advantage in Model)
                            {
                                <tr>
                                    <th scope="row">@advantage.Id</th>
                                    <td><img src="~/img/@advantage.IconUrl" alt="image"/></td>
                                    <td>@advantage.Content</td>
                                    <td class="text-right"><a class="btn bg-warning btn-warning text-white" asp-action="update" asp-route-id="@advantage.Id">Redaktə et</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>