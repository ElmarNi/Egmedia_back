@model IEnumerable<Service>
@{
    ViewBag.Title = "Xidmətlər";
    ViewBag.MetaDescription = "Xidmətlərimizin arasından özünüzə lazım olanı rahatlıqla seçə bilərsiniz.";
}

@await Html.PartialAsync("_BreadCrumbPartialView")

<section id="services-page">
    <div class="container position-relative service-container">
        <div class="row category-names">
            <ul>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <li><a href="#" class="@((i==0)?"is-checked":null)" data-id="@i">@Model.ElementAt(i).CategoryName</a></li>
                }
            </ul>
        </div>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <div class="row category-content @((i==0)?"active":null)" data-id="@i">
                <div class="col-lg-1 col-md-2 col-3 pr-lg-0">
                    <button class="previous control-button mb-2">
                        <i class="fas fa-chevron-up"></i>
                    </button>
                    <div class="gallery-wrapper">
                        <div class="gallery">
                            @for (int z = 0; z < Model.ElementAt(i).Images.Count(); z++)
                            {
                                <div class="gallery-item @((z==1)?"active":null)" data-id="@z">
                                    <img src="img/@Model.ElementAt(i).Images.ElementAt(z).ImageUrl" alt="image">
                                </div>
                            }

                        </div>
                    </div>
                    <button class="next control-button mt-2 ">
                        <i class="fas fa-chevron-down"></i>
                    </button>
                </div>
                <div class="col-lg-6 col-md-10 col-9 pr-lg-0">
                    <div class="main-image">
                        @for (int j = 0; j < Model.ElementAt(i).Images.Count(); j++)
                        {
                            <img src="img/@Model.ElementAt(i).Images.ElementAt(j).ImageUrl" class="@((j==1)?"active":null)" alt="image">
                        }
                    </div>
                </div>
                <div class="col-lg-5 col-12 mt-3 mt-lg-0">
                    <div class="content">
                        <h1>@Model.ElementAt(i).Heading</h1>
                        @Html.Raw(Model.ElementAt(i).Content)
                    </div>
                </div>
            </div>
        }
    </div>
</section>