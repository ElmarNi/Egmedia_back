@model PortfolioVM
<section id="breadcrumb">
    <div class="page-name-wrapper" style="background-image: url(img/@ViewBag.Banner);">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <div class="page-name">
                        <h1>Portfolio</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="aside">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <ul class="d-flex justify-content-center">
                        <li class="slash">
                            <a href="/">Ana səhifə</a>
                        </li>
                        <li>
                            Portfolio
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="portfolio-page">
    <div class="container">
        <div class="row category-names">
            <ul>
                <li><a href="#" class="is-checked" data-filter="*">All</a></li>
                @foreach (var category in Model.projectCategories)
                {
                    <li><a href="#" data-filter=".category-@category.Id">@category.Name</a></li>
                }
            </ul>
        </div>
        <div class="row filtered-items">
            @foreach (var project in Model.projects)
            {
                <div class="col-sm-6 col-lg-4 filter-item category-@project.ProjectCategoryId" data-category="category-@project.ProjectCategoryId">
                    <div class="item">
                        <a target="_blank" @(project.ProjectCategory.IsImage ? $"href=img/{project.ImageUrl} data-fancybox=portfolioPagePortfolioGallery data-caption={project.Name}" : $"href={project.Url}")>
                            <div class="image-wrapper">
                                <img src="img/@project.ImageUrl" alt="">
                            </div>
                            <div class="content">
                                <div class="text-wrapper">
                                    <h1>@project.Name</h1>
                                    <p>Daha ətraflı</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
</section>